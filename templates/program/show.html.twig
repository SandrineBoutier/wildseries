{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
	</div>

	<h1>Toutes les saisons de cette série :</h1>
	{% for season in seasons %}
		<div>
			<h2>Saison {{ season.number }} ( {{ season.year }} )</h2>
			{# Lien vers la fiche de la saison : #}
			<a href="{{ path('program_season_show',{program:program.id,season:season.id}) }}">voir le détail de cette saison</a>
		</div>
	{% else %}
		Aucune saison trouvée.
	{% endfor %}

	<a href="{{ path('program_index') }}">
		Retour à la liste des séries
	</a>
{% endblock %}
