{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ category.name }}</h2>
            {# Lien vers la fiche de la catégorie : #}
            <a href="{{ path("category_show",{categoryName:category.name}) }}">Voir le détail de cette catégorie</a>
        </div>
    {% endfor %}

    <a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}